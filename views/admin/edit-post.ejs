<%- include("../partials/header-admin") %>
  
  <div class="container py-md-5 container--narrow">
    <%- include("../partials/flash")%>
    <h1 class="">Update Post</h1>
    <form action="/post/<%=editData._id%>/edit" method="POST">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off" value="<%=editData.title%>">
      </div>

      <div class="form-group">
        <label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
        <textarea required name="body" id="post-body" class="body-content tall-textarea form-control" type="text"><%=editData.body%></textarea>
      </div>
      
      <button class="btn btn-primary">Save Updates</button>
    </form>
  </div>
  
 <%- include("../partials/footer-admin") %>